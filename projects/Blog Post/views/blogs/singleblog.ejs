<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>

    <%- include("../partials/nav.ejs") %>
    
    <div class="single_blog">
        <div class="single_blog_head">
    
            <div class="heading-single">
            <h1><%= blog.title %></h1>
            </div>
    
            <span class="single_blog_icons">
    
                <a href="/blogs" class="back-icon"><i class="material-icons">arrow_back</i></a>
                    <form action="/blogs/id/<%= blog.id %>?_method=DELETE" method="POST">

    
                    <button type="submit" class="icon-delete-btn">
    
                        <i class="material-icons">delete</i>
    
                    </button>
    
                </form>
    
            </span>
    
        </div>
    
        <p><%= blog.summary %></p>
    
        <p><%= blog.content %></p>
    
        <br />
    
        <p><em>by <%= blog.author %></em></p>
    
    </div>

    <%- include("../partials/footer.ejs") %>
  
    </body>
</html>
